#include <iostream>
#include <windows.h>
#include <string>
using namespace std;

#pragma region Print

enum ConsoleColor
{
    black = 0,
    blue = 1,
    green = 2,
    cyan = 3,
    red = 4,
    magenta = 5,
    brown = 6,
    lightGray = 7,
    darkGray = 8,
    lightBlue = 9,
    lightGreen = 10,
    lightCyan = 11,
    lightRed = 12,
    lightMagenta = 13,
    yellow = 14,
    white = 15
};

void print(string text = " ", int x = 0, int y = 0, ConsoleColor text_color = white, ConsoleColor background = black)
{
    HANDLE handle;
    COORD coordinates;
    handle = GetStdHandle(STD_OUTPUT_HANDLE);
    coordinates.X = x;
    coordinates.Y = y;
    SetConsoleCursorPosition(handle, coordinates);
    SetConsoleTextAttribute(handle, (WORD)((background << 4) | text_color));
    cout << text;
    SetConsoleTextAttribute(handle, (WORD)((black << 4) | white));
}
void print(int x = 0, int y = 0, ConsoleColor background = black)
{
    print(" ", x, y, background, background);
}
#pragma endregion Print

int main()
{
    print(0, 0, green);
    print("O", 0, 1, red, blue);
}
